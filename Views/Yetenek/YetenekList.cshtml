@model List<Skill>

@{
    ViewData["Title"] = "YetenekList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeteneklerim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenekler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yetenekler ile ilgili işlemlerinizi aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Yetenek</th>
                                    <th scope="col">Seviye</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SkillId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><a href="/Yetenek/DeleteYetenek/@item.SkillId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Yetenek/UpdateYetenek/@item.SkillId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Yetenek/CreateYetenek/" class="btn btn-primary">Yeni Yetenek Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>