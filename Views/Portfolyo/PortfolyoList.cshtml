@model List<Portfolio>

@{
    ViewData["Title"] = "PortfolyoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolyo</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Proje Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Portfolyo ile ilgili işlemlerinizi aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alan</th>
                                    <th scope="col">Proje ile İlgili Fotoğraf</th>
                                    <th scope="col">Proje ile İlgili URL Adresi</th>
                                    <th scope="col">Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PortfolioId</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Url</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Portfolyo/DeletePortfolyo/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Portfolyo/UpdatePortfolyo/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Portfolyo/CreatePortfolyo/" class="btn btn-primary">Yeni Proje Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>